<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nutrition_tracking_navgraph"
    app:startDestination="@id/fragmentNutritionTracker">

    <fragment
        android:id="@+id/fragmentNutritionTracker"
        android:name="com.pupccis.fitnex.activities.nutritiontracking.FragmentNutritionTracking"
        android:label="fragment_nutrition_tracker"
        tools:layout="@layout/fragment_nutrition_tracking" >
        <action
            android:id="@+id/action_fragmentNutritionTracker_to_fragmentAddFood"
            app:destination="@id/fragmentAddFood"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAddFood"
        android:name="com.pupccis.fitnex.activities.nutritiontracking.FragmentAddFood"
        android:label="fragment_add_food"
        tools:layout="@layout/fragment_add_food" >
        <action
            android:id="@+id/action_fragmentAddFood_to_fragmentFoodInfo"
            app:destination="@id/fragmentFoodInfo" />
    </fragment>
    <fragment
        android:id="@+id/fragmentFoodInfo"
        android:name="com.pupccis.fitnex.activities.nutritiontracking.FragmentFoodInfo"
        android:label="fragment_food_info"
        tools:layout="@layout/fragment_food_info" >
        <action
            android:id="@+id/action_fragmentFoodInfo_to_fragmentAddFood"
            app:destination="@id/fragmentAddFood" />
    </fragment>
</navigation>