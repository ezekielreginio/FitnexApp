<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="presenter"
            type="com.pupccis.fitnex.activities.routine.RoutineFragment" />
        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.RoutineViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        bind:context=".activities.routine.RoutineFragment" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutTop"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:alpha="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/constraintLayoutRoutineHeader"
                android:layout_marginBottom="3dp"
                android:background="@drawable/routine_top_background">

                <ImageView
                    android:id="@+id/imageViewRoutineGuideGIF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutRoutineHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutTop"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutDetails">
                <ImageView
                    android:id="@+id/buttonFragmentTimerButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_pause"
                    bind:ignore="MissingConstraints"
                    />
                <Chronometer
                    android:id="@+id/chronometerRoutineTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toEndOf="@id/buttonFragmentTimerButton"
                    android:textColor="@color/blueTextColor"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layout_constraintStart_toEndOf="@id/buttonFragmentTimerButton"-->
<!--                    android:text="00:00"-->
<!--                    android:textSize="20dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/blueTextColor"-->
<!--                    />-->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_clock"
                    bind:ignore="MissingConstraints"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                bind:layout_editor_absoluteY="150dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutRoutineHeader">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    bind:layout_editor_absoluteY="137dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="0"
                        android:textColor="#858585" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="sets"
                        android:textColor="#858585" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:text="Weight"
                    android:textColor="#858585"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                    bind:layout_editor_absoluteY="137dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="68dp"
                    android:text="Reps"
                    android:textColor="#858585"

                    />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="35dp"
                    android:text="IBM"
                    android:textColor="#858585"

                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRoutinePage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutDetails"
                app:layout_constraintBottom_toTopOf="@id/buttonLogRest"/>
            <Button
                android:id="@+id/buttonLogRest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/themeColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"
                android:text="Log Set &amp; Rest"
                android:textSize="20sp"
                android:textColor="@color/whiteTextColor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
