<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="program"
            type="com.pupccis.fitnex.model.Program" />

        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.ProgramViewModel" />


    </data>


    <!-- Your main layout here -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.MaterialComponents"
        app:cardBackgroundColor="@color/whiteTextColor"
        app:cardCornerRadius="10dp">

        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:id="@+id/swipeRevealLayoutProgramCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dragEdge="left"
            app:mode="normal"
            bind:ignore="MissingClass">

            <!-- Your secondary layout here -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:onClick="@{(v)->viewModel.triggerUpdateObserver(program)}"
                    app:layout_constraintBottom_toTopOf="@+id/imageView11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_edit_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                    app:layout_constraintEnd_toEndOf="@+id/imageView10"
                    app:layout_constraintStart_toStartOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="@+id/imageView10"
                    app:srcCompat="@drawable/ic_edit_btn" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:onClick="@{(v)->viewModel.triggerDeleteObserver(program)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView10"
                    app:srcCompat="@drawable/card_delete_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                    app:layout_constraintEnd_toEndOf="@+id/imageView11"
                    app:layout_constraintStart_toStartOf="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="@+id/imageView11"
                    app:srcCompat="@drawable/ic_btn_delete" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutProgramContainer"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true">


                <!--        <RelativeLayout-->
                <!--            android:id="@+id/layoutProgramDescription"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:animateLayoutChanges="true"-->
                <!--            android:orientation="horizontal"-->
                <!--            app:layout_constraintEnd_toEndOf="parent"-->
                <!--            app:layout_constraintStart_toStartOf="parent"-->
                <!--            app:layout_constraintTop_toBottomOf="@id/imageViewDisplay">-->


                <!--            <TextView-->
                <!--                android:id="@+id/textProgramDescription"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_alignParentStart="true"-->
                <!--                android:layout_marginStart="3dp"-->
                <!--                android:text="Sample Description"-->
                <!--                android:textColor="@color/black"-->
                <!--                android:textSize="15dp"-->
                <!--                bind:ignore="MissingConstraints" />-->

                <!--            <ImageView-->
                <!--                android:id="@+id/programExpand"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_alignParentEnd="true"-->
                <!--                app:srcCompat="@drawable/ic_expand_more" />-->
                <!--        </RelativeLayout>-->

                <ImageView
                    android:id="@+id/imageViewDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_todays_activity_template_img" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@color/whiteTextColor"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/programNameContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@color/whiteTextColor"
                        app:layout_constraintBottom_toTopOf="@+id/layoutProgramInfo">

                        <TextView
                            android:id="@+id/textProgramTrainerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jesse Cuasay"
                            android:textColor="#787878"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/textProgramName"
                            app:layout_constraintTop_toBottomOf="@+id/textProgramName" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:text="\u2022"
                            android:textColor="#787878"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/textProgramTrainerName"
                            app:layout_constraintTop_toTopOf="@+id/textProgramTrainerName" />

                        <TextView
                            android:id="@+id/textProgramTrainees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:text="0 trainees"
                            android:textColor="#787878"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/textView15"
                            app:layout_constraintTop_toTopOf="@+id/textView15" />

                        <ImageView
                            android:id="@+id/trainerImage"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_circle_imageview" />

                        <TextView
                            android:id="@+id/textProgramName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Cardio Workout Class"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/trainerImage"
                            app:layout_constraintTop_toTopOf="@+id/trainerImage" />


                        <ImageView
                            android:id="@+id/imageViewExpand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_expand_less" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutProgramInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:visibility="gone"
                        android:background="@color/whiteTextColor"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/firstGuideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.33" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/secondGuideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.66" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#B1B1B1"
                            app:layout_constraintTop_toBottomOf="@+id/textView16" />

                        <TextView

                            android:id="@+id/textProgramCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Sample Category"

                            android:textColor="@color/black"
                            android:textSize="15dp"
                            app:layout_constraintEnd_toStartOf="@+id/firstGuideline"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            bind:ignore="MissingConstraints"
                            bind:layout_editor_absoluteY="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textColor="#8A8A8A"
                            android:textSize="8dp"
                            app:layout_constraintStart_toStartOf="@+id/textProgramCategory"
                            app:layout_constraintTop_toBottomOf="@+id/textProgramCategory"
                            bind:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@+id/firstGuideline"
                            app:layout_constraintTop_toTopOf="@+id/textProgramCategory"
                            app:srcCompat="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/textProgramSessionCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            app:layout_constraintEnd_toStartOf="@+id/secondGuideline"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/imageView8"
                            app:layout_constraintTop_toTopOf="@+id/imageView8"
                            bind:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Session Count"
                            android:textColor="#8A8A8A"
                            android:textSize="8dp"
                            app:layout_constraintStart_toStartOf="@+id/textProgramSessionCount"
                            app:layout_constraintTop_toBottomOf="@+id/textProgramSessionCount"
                            bind:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintStart_toStartOf="@+id/secondGuideline"
                            app:layout_constraintTop_toTopOf="@+id/textProgramSessionCount"
                            app:srcCompat="@drawable/ic_duration" />

                        <TextView
                            android:id="@+id/textProgramDuration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="0 minutes"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="@+id/imageView9"
                            bind:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textColor="#8A8A8A"
                            android:textSize="8dp"
                            app:layout_constraintStart_toStartOf="@+id/textProgramDuration"
                            app:layout_constraintTop_toBottomOf="@+id/textProgramDuration"
                            bind:ignore="MissingConstraints" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutProgramButtonViewer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/programSubMenu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_submenu"
                                bind:layout_editor_absoluteX="325dp" />

                            <ImageView
                                android:id="@+id/programView"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:onClick="@{()-> viewModel.triggerRoutineObserver(program)}"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_view"
                                bind:layout_editor_absoluteX="325dp" />

                            <Button
                                android:id="@+id/buttonProgramView"
                                android:layout_width="wrap_content"
                                android:layout_height="70px"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/button_view"
                                android:text="View"
                                android:textColor="@color/whiteTextColor"
                                app:layout_constraintStart_toStartOf="parent" />

                            <Button
                                android:id="@+id/buttonProgramJoin"
                                android:layout_width="wrap_content"
                                android:layout_height="70px"
                                android:layout_marginEnd="30dp"
                                android:background="@drawable/button_join"
                                android:text="Join"
                                android:textColor="@color/whiteTextColor"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view3">


                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/textProgramDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="Description"
                                android:textColor="#434343"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                bind:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imageViewBadgeIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_badge_bronze" />

                <ImageView
                    android:id="@+id/imageViewPullIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pull_indicator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>

