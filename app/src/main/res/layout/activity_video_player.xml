<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VideoPlayer.VideoPlayer"
    android:background="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutVideoPlayerFitNexTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitNex"
            android:textColor="@color/blueTextColor"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutVideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoPlayerFitNexTitle">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/video_player"
            app:resize_mode="fit"
            app:hide_on_touch="true"
            app:show_timeout="5000"
            app:rewind_increment="10000"
            app:fastforward_increment="10000"
            app:use_controller="true"
            android:background="@color/cardview_dark_background"
            app:player_layout_id="@layout/exo_simple_player_view"
            app:controller_layout_id="@layout/custom_controller"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutVideoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoPlayer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVideoPlayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_avenir"
                android:text="Morning Routine Yoga"
                android:textColor="@color/blueTextColor"
                android:textSize="25dp"
                android:textStyle="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoTitle"
            app:layout_constraintBottom_toTopOf="@id/constraintLayoutVideoPlayerButtons">

            <TextView
                android:id="@+id/textViewVideoPlayerViewCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 views |"
                android:textColor="@color/blueTextColor"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/textViewVideoPlayerTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 minute ago"
                android:layout_marginStart="10dp"
                android:textColor="@color/blueTextColor"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/textViewVideoPlayerViewCounter"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoPlayerButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoStatistics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutVideoLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp">
                <ImageView
                    android:id="@+id/buttonVideoLike"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_thumb_up_24"
                    tools:ignore="MissingConstraints"
                    />
                <TextView
                    android:id="@+id/textViewVideoPlayerLikeCounter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123k"
                    android:textColor="@color/blueTextColor"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonVideoLike"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutVideoDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/constraintLayoutVideoLike"
                android:layout_marginStart="60dp">
                <ImageView
                    android:id="@+id/buttonVideoDislike"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_thumb_down_24"
                    tools:ignore="MissingConstraints"
                    />
                <TextView
                    android:id="@+id/textViewVideoPlayerDislikeCounter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123k"
                    android:textColor="@color/blueTextColor"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonVideoDislike"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutVideoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/constraintLayoutVideoDislike"
                android:layout_marginStart="60dp">
                <ImageView
                    android:id="@+id/buttonVideoShare"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_share_24"
                    tools:ignore="MissingConstraints"/>
                <TextView
                    android:id="@+id/textViewVideoPlayerSharer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="@color/blueTextColor"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonVideoShare"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutVideoSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/constraintLayoutVideoShare"
                android:layout_marginStart="60dp">
                <ImageView
                    android:id="@+id/buttonVideoSave"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_add_box_24"
                    tools:ignore="MissingConstraints"
                    />
                <TextView
                    android:id="@+id/textViewVideoPlayerSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/blueTextColor"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonVideoSave"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoPlayerTrainerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoPlayerButtons"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutVideoPlayerTrainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/textViewVideoPlayerTrainerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Dela Cruz"
                    android:textColor="@color/blueTextColor"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/constraintLayoutVideoPlayerTrainerName">
                <TextView
                    android:id="@+id/textViewVideoPlayerTrainerArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>>"
                    android:textColor="@color/magenta"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/background_btn_magenta"
                    android:text="Follow"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="0dp"
                    android:textColor="@color/magenta"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/viewVideoCommentsDivider"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoPlayerTrainerInfo"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoCommentsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewVideoCommentsDivider"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/textViewVideoCommentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="@color/blueTextColor"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewVideoPlayerCommentsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/blueTextColor"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/textViewVideoCommentsTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutVideoCommentBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoCommentsHeader"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/textFirstChar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_user_icon"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textAllCaps="true"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/editTextVideoDescription"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Write a Comment"
                android:minLines="2"
                android:gravity="top"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_textfield"
                app:layout_constraintStart_toEndOf="@id/textFirstChar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/viewVideoCommentsDividerBottom"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutVideoCommentBox"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>