<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<layout
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="com.pupccis.fitnex.activities.patron.InitialPatronPrivelegesFragment" />
        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.PatronViewModel" />
        <variable
            name="prestige"
            type="com.pupccis.fitnex.api.enums.Privilege" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.patron.InitialPatronPrivelegesFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/register_bk_color"
            android:focusableInTouchMode="true"
            android:gravity="center"
            tools:context=".activities.login.FitnexRegister">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutProgramProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themetintColor"
                android:translationZ="1dp"
                android:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutRegisterProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/addProgramProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="@color/whiteTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:text="Processing, Please Wait"
                        android:textColor="@color/whiteTextColor"
                        app:layout_constraintTop_toBottomOf="@id/addProgramProgressBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Patron System\nStep 1\n\nSet Privileges"
                            android:textColor="@color/whiteTextColor" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_register_hero" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/whiteTextColor"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/bronzeColor"
                                app:cardCornerRadius="10dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    >

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/textViewBronzePrivilagesHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Bronze Tier Privileges"
                                            android:textColor="@color/whiteTextColor"
                                            android:textSize="16dp"
                                            android:textStyle="bold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            >
                                            <ImageView
                                                android:id="@+id/buttonBronzePrivilegeMenu"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                app:srcCompat="@drawable/ic_submenu_white"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                />
                                        </LinearLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <TextView
                                        android:id="@+id/textViewBronzePrivilages"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        app:layout_constraintTop_toBottomOf="@id/textViewBronzePrivilagesHeader"
                                        android:textColor="@color/whiteTextColor"
                                        android:animateLayoutChanges="true"
                                        />
                                    <LinearLayout
                                        android:id="@+id/linearLayoutBronzeAddPrivilege"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{(v) -> fragment.addPrivilegeClick(prestige.BRONZE)}"
                                        app:layout_constraintTop_toBottomOf="@id/textViewBronzePrivilages">
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:src="@drawable/ic_add_circle_outline"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Add Privilege"
                                            android:textSize="11dp"
                                            android:textColor="@color/whiteTextColor"
                                            />
                                    </LinearLayout>


                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/silverColor"
                                app:cardCornerRadius="10dp"
                                android:layout_marginTop="10dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    >

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/textViewSilverPrivilagesHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Silver Tier Privileges"
                                            android:textColor="@color/whiteTextColor"
                                            android:textSize="16dp"
                                            android:textStyle="bold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent">
                                            <ImageView
                                                android:id="@+id/buttonSilverPrivilegeMenu"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                app:srcCompat="@drawable/ic_submenu_white"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                />id:textColor="@color/whiteTextColor"
                                                />
                                        </LinearLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <TextView
                                        android:id="@+id/textViewSilverPrivilages"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        android:animateLayoutChanges="true"
                                        android:textColor="@color/whiteTextColor"
                                        app:layout_constraintTop_toBottomOf="@id/textViewSilverPrivilagesHeader"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/textViewSilverPrivilages"
                                        android:onClick="@{(v) -> fragment.addPrivilegeClick(prestige.SILVER)}">
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:src="@drawable/ic_add_circle_outline"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Add Privilege"
                                            android:textSize="11dp"
                                            android:textColor="@color/whiteTextColor"
                                            />
                                    </LinearLayout>


                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/goldColor"
                                app:cardCornerRadius="10dp"
                                android:layout_marginTop="10dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    >

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/textViewGoldPrivilagesHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Gold Tier Privileges"
                                            android:textColor="@color/whiteTextColor"
                                            android:textSize="16dp"
                                            android:textStyle="bold"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent">
                                            <ImageView
                                                android:id="@+id/buttonGoldPrivilegeMenu"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                app:srcCompat="@drawable/ic_submenu_white"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                />
                                        </LinearLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <TextView
                                        android:id="@+id/textViewGoldPrivilages"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="5dp"
                                        android:textColor="@color/whiteTextColor"
                                        android:animateLayoutChanges="true"
                                        app:layout_constraintTop_toBottomOf="@id/textViewGoldPrivilagesHeader"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/textViewGoldPrivilages"
                                        android:textColor="@color/whiteTextColor"
                                        android:onClick="@{(v) -> fragment.addPrivilegeClick(prestige.GOLD)}">
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:src="@drawable/ic_add_circle_outline"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Add Privilege"
                                            android:textSize="11dp"
                                            android:textColor="@color/whiteTextColor"
                                            />
                                    </LinearLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:weightSum="12">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="3"
                            android:background="@color/whiteTextColor" />

                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Use other Methods"
                            android:textAlignment="center"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="3"
                            android:background="@color/whiteTextColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_facebook" />
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp" />


            <ImageView
                android:id="@+id/imageViewNextStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_next_img" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutAddPrivilegeModal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themetintColor"
                android:visibility="gone"
                android:translationZ="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/whiteTextColor">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/linearLayoutAddPrestigeLogo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="visible"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                                <ImageView
                                    android:id="@+id/imageViewLogo"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintEnd_toStartOf="@id/textViewFitnex"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_fitnex_logo"
                                    bind:ignore="MissingConstraints" />

                                <TextView
                                    android:id="@+id/textViewFitnex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fitnex Patron System"
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/imageViewLogo"
                                    app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewPrivilegeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Privilege"
                            android:textColor="@color/blueTextColor"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputProgramCategory"
                            style="@style/parent"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            >

                            <TextView
                                style="@style/modifiedEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="Privilege"
                                android:textAlignment="center"
                                android:textColor="#26355E"
                                android:layout_marginStart="3dp"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/spinnerAddPrestige"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:textColorHint="#C5B2B2"
                                android:textSize="12sp"
                                android:background="#FFFFFF"
                                android:hint="-Select A Category-"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.498"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputSessionNumber"
                            style="@style/AddProgram"
                            android:textColorHint="#C5B2B2"
                            android:layout_marginTop="5dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/editTextSessionNumber"
                                style="@style/AddProgramText"
                                android:hint="Session Number"
                                android:maxLines="1"
                                android:text="@={viewModel.sessionNumber}"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputCustomPrivilege"
                            style="@style/AddProgram"
                            android:textColorHint="#C5B2B2"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/editTextCustomPrivilege"
                                style="@style/AddProgramText"
                                android:hint="Custom Privilege"
                                android:maxLines="1"
                                android:text="@={viewModel.customPrivilege}"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                            android:id="@+id/buttonAddPrestige"
                            style="@style/loginButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:text="Add Privilege"
                            app:initialCornerAngle="27dp"
                            app:spinning_bar_color="#FFF"
                            app:spinning_bar_padding="6dp"
                            app:spinning_bar_width="4dp"
                            android:onClick="@{(v) -> fragment.onClick(v)}"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>
