<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.patron.InitialPatronPricingFragment">

        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/register_bk_color"
            android:focusableInTouchMode="true"
            android:gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutProgramProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themetintColor"
                android:translationZ="1dp"
                android:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutRegisterProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/addProgramProgressBar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateTint="@color/whiteTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:text="Processing, Please Wait"
                        android:textColor="@color/whiteTextColor"
                        app:layout_constraintTop_toBottomOf="@id/addProgramProgressBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Review \nProgram\nRoutine"
                            android:textColor="@color/whiteTextColor" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_register_hero" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        app:cardBackgroundColor="@color/whiteTextColor"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            >
                            <TextView
                                style="@style/parent"
                                android:text="Pull Workout - Coach Juan Dela Cruz"
                                android:textColor="@color/themeColor"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="false"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:theme="@style/RatingBar"
                                    android:stepSize="0.5"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <EditText
                                android:id="@+id/editTextBronzePricing"
                                android:hint="Write Your Review/Feedback"
                                android:textColorHint="@color/secondaryTextColor"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:textColor="@color/black"
                                android:background="@drawable/background_textfield"
                                android:inputType="text"
                                android:minLines="4"
                                android:textSize="15dp"
                                android:gravity="top"
                                android:padding="5dp"
                                android:maxLines="10">
                            </EditText>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayoutContainerRoutineGuide"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/labelAddVideoThumbnail"
                                android:background="@drawable/background_textfield"
                                android:layout_marginTop="20dp"
                                android:minHeight="70dp">
                                <com.google.android.material.button.MaterialButton
                                    android:theme="@style/Theme.Button"
                                    android:id="@+id/btnAddRoutineGuide"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Photo"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginTop="10dp"
                                    android:background="#092f62"
                                    android:textColor="@color/whiteTextColor"
                                    android:onClick="onClick"
                                    app:iconGravity=""
                                    app:icon="@drawable/ic_camera"
                                    />
                            </androidx.constraintlayout.widget.ConstraintLayout>



                            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                                android:id="@+id/buttonFinishSetup"
                                style="@style/loginButton"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:text="Submit"
                                app:initialCornerAngle="27dp"
                                app:spinning_bar_color="#FFF"
                                app:spinning_bar_padding="6dp"
                                app:spinning_bar_width="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

    </FrameLayout>
</layout>
