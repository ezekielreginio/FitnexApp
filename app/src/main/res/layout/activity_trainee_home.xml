    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityTrainerDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        bind:context=".activities.main.trainee.TraineeDashboard"
        >

        <ImageView
            android:id="@+id/imageViewProfileMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="18dp"
            android:adjustViewBounds="false"
            android:src="@drawable/ic_settings"
            android:translationZ="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <fragment
            android:id="@+id/navHostFragmentTrainerDashboard"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/trainee_dashboard_navgraph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayoutTrainerDashboardNavbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/constraintLayoutTrainerDashboardNavbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:transitionName="addProgramTransition"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationTrainerDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_trainer_menubar"
                app:itemIconTint="@color/colorPrimary"
                app:itemTextColor="@color/colorPrimary"
                app:menu="@menu/trainee_dashboard_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </LinearLayout>




