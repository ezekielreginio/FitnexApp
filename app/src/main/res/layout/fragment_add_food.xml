<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.NutritionTrackingViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:context=".activities.nutritiontracking.FragmentAddFood">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutViewFoodProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="1dp"
            android:visibility="gone"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/include_loading_layout"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteTextColor">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgressSearchFood"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:indeterminate="true"
                android:layout_marginTop="100dp"
                app:indicatorColor="@color/blueTextColor"
                app:indicatorSize="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackThickness="8dp"
                android:visibility="gone"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutSearchFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryBackgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:id="@+id/linearLayoutAddFoodHeader"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    >

                    <ImageView
                        android:id="@+id/buttonAddFoodBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_arrow_back_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="40dp"
                        android:onClick="onClick"/>

                    <TextView
                        android:id="@+id/textViewAddFoodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BREAKFAST"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/buttonAddFoodMenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_submenu_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:onClick="onClick"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:drawableStart="@drawable/ic_search_gray"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutAddFoodHeader"
                    android:background="@drawable/rounded_input"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:text="@={viewModel.foodSearch}"
                    android:hint="Search Food or Brand"
                    bind:foodSearch="@{viewModel.foodSearch}"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:id="@+id/scrollViewResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutSearchFood"
                app:layout_constraintBottom_toBottomOf="parent"

                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textViewResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESULTS"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewFoodQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewResult"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>