<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.nutritiontracking.FragmentAddFood">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteTextColor">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutSearchFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryBackgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:id="@+id/linearLayoutAddFoodHeader"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    >

                    <ImageView
                        android:id="@+id/buttonAddFoodBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_arrow_back_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="40dp"
                        android:onClick="onClick"/>

                    <TextView
                        android:id="@+id/textViewAddFoodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BREAKFAST"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/buttonAddFoodMenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_submenu_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:onClick="onClick"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:drawableStart="@drawable/ic_search_gray"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutAddFoodHeader"
                    android:background="@drawable/rounded_input"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:hint="Search Food or Brand"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:id="@+id/scrollViewResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutSearchFood"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESULTS"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"/>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>