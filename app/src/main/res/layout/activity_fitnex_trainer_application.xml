<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="presenter"
            type="com.pupccis.fitnex.activities.login.FitnexTrainerApplication" />
        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.UserViewModel" />

    </data>
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.login.FitnexRegister"
        android:background="@color/register_bk_color"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:layout_gravity="center">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutApplyTrainerProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="1dp"
            android:visibility="gone"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/include_loading_layout"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/viewParent.headerText.NoMode"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Start\nyour Fitnex\ncareer \nwith us \n \nApply Now!"
                        android:textColor="@color/whiteTextColor" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_register_hero" />
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputName"
                            style="@style/parent"
                            android:layout_marginTop="@dimen/loginViewsMargin">

                            <EditText
                                android:id="@+id/editTextApplicantName"
                                style="@style/modifiedEditText"
                                android:hint="Full Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:text="@={viewModel.applicantName}"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputApplicantAge"
                            style="@style/parent"
                            android:layout_marginTop="@dimen/loginViewsMargin">

                            <EditText
                                android:id="@+id/editTextApplicantAge"
                                style="@style/modifiedEditText"
                                android:hint="Birth Date"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:text="@={viewModel.applicantBirthDate}"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputApplicantEmail"
                            style="@style/parent"
                            android:layout_marginTop="@dimen/loginViewsMargin">

                            <EditText
                                android:id="@+id/editTextApplicantEmail"
                                style="@style/modifiedEditText"
                                android:hint="Email"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:text="@={viewModel.applicantEmail}"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputApplicantPhoneNumber"
                            style="@style/AddProgram"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#C5B2B2">

                            <EditText
                                android:id="@+id/editTextApplicantPhoneNumber"
                                style="@style/AddProgramText"
                                android:hint="Session Number"
                                android:inputType="number"
                                android:maxLines="3"
                                android:text="@={viewModel.applicantPhoneNumber}"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp">
                            <TextView
                                android:id="@+id/editTextAddClientTargetTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Specialization"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                app:layout_constraintTop_toTopOf="parent"
                                />


                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroupClients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:translationZ="1dp"
                                app:layout_constraintTop_toBottomOf="@id/editTextAddProgramTargetClients"
                                >

                            </com.google.android.material.chip.ChipGroup>
                            <Spinner
                                android:id="@+id/editTextAddProgramTargetClients"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:textColorHint="#C5B2B2"
                                android:background="#FFFFFF"
                                android:hint="-Select A Category-"
                                android:visibility="visible"
                                android:theme="@style/Theme.App"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/editTextAddClientTargetTitle"
                                app:layout_constraintVertical_bias="0.498"
                                />
                            <View
                                android:id="@+id/viewVideoCommentsSectionDivider"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/black"
                                app:layout_constraintTop_toBottomOf="@id/chipGroupClients"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/textInputLayoutApplicantProfilePicture"
                            style="@style/parent"
                            android:layout_marginTop="20dp"
                            >

                            <TextView
                                android:id="@+id/labelApplicantProfilePicture"
                                style="@style/modifiedEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="Profile Picture"
                                android:textAlignment="center"
                                android:textColor="#958585"
                                android:textSize="12sp"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <ImageView
                                android:id="@+id/imageViewApplicantProfilePicture"
                                android:layout_width="176dp"
                                android:layout_height="120dp"
                                app:layout_constraintTop_toBottomOf="@id/labelApplicantProfilePicture"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:visibility="gone"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayoutContainerApplicantProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/labelApplicantProfilePicture"
                                android:background="@drawable/background_textfield"
                                android:minHeight="70dp">

                                <Button
                                    android:id="@+id/btnAddApplicantProfilePicture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="5dp"
                                    android:text="Upload Picture"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginTop="10dp"
                                    android:background="#092f62"
                                    android:textColor="@color/whiteTextColor"
                                    android:onClick="onClick"
                                    />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/textInputLayoutApplicantResume"
                            style="@style/parent"
                            android:layout_marginTop="20dp"
                            >

                            <TextView
                                android:id="@+id/labelApplicantResume"
                                style="@style/modifiedEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="Fitness Resume"
                                android:textAlignment="center"
                                android:textColor="#958585"
                                android:textSize="12sp"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayoutContainerApplicantResume"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/labelApplicantResume"
                                android:background="@drawable/background_textfield"
                                android:minHeight="70dp">

                                <Button
                                    android:id="@+id/btnAddApplicantResume"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="5dp"
                                    android:text="Upload Resume"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginTop="10dp"
                                    android:background="#092f62"
                                    android:textColor="@color/whiteTextColor"
                                    android:onClick="onClick"
                                    />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                            android:id="@+id/buttonRegisterButton"
                            style="@style/loginButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:text="Apply"
                            app:initialCornerAngle="27dp"
                            app:spinning_bar_color="#FFF"
                            app:spinning_bar_padding="6dp"
                            app:spinning_bar_width="4dp"
                            android:onClick="onClick"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="12"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/whiteTextColor"
                        android:layout_weight="3"/>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="30dp"
            android:adjustViewBounds="false"
            android:onClick="onLoginClick"
            android:src="@drawable/ic_back_img" />
    </RelativeLayout>
</layout>
