<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.pupccis.fitnex.viewmodel.NutritionTrackingViewModel" />
        <variable
            name="presenter"
            type="com.pupccis.fitnex.activities.nutritiontracking.FragmentFoodInfo" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.nutritiontracking.FragmentFoodInfo"
        android:theme="@style/Theme.MaterialComponents"
        bind:macroNutrients="@{viewModel.macroNutrients}">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grayBackgroundColor"
                android:paddingBottom="100dp">
                <LinearLayout
                    android:id="@+id/constraintLayoutSearchFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primaryBackgroundColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/linearLayoutFoodInfoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="10dp"
                        >
                        <ImageView
                            android:id="@+id/buttonAddFoodBack"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_arrow_back_white"
                            android:onClick="onClick"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end">
                            <ImageView
                                android:id="@+id/buttonFoodInfoMenu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_submenu_white"
                                android:gravity="right"
                                android:onClick="onClick"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="100dp"
                        android:paddingHorizontal="20dp">
                        <TextView
                            android:id="@+id/textViewFoodInfoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={viewModel.foodName}"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/buttonAddFavorite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_heart_light_gray"
                            android:scaleType="center"
                            android:background="@drawable/background_circle_gray"
                            android:layout_gravity="center_vertical"
                            android:onClick="@{(v)->presenter.onClick(v)}"
                            />
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardViewFoodInfoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayoutSearchFood"
                    >
                    <LinearLayout
                        android:id="@+id/linearLayoutFoodInfoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="15dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textField"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/whiteTextColor"
                            app:boxStrokeColor="@color/black"
                            android:layout_marginEnd="20dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="@={viewModel.servingAmount}"
                                android:textAlignment="center"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilServingSelected"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/whiteTextColor"
                            app:boxStrokeColor="@color/black"
                            app:endIconTint="@color/black"
                            >

                            <AutoCompleteTextView
                                android:id="@+id/dropdownServingList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:completionThreshold="0"
                                android:freezesText="false"
                                android:textColor="@color/black"
                                android:cursorVisible="false"
                                android:focusableInTouchMode="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewCaloriesInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:layout_constraintTop_toBottomOf="@id/materialCardViewFoodInfoInput"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/linearLayoutCaloriesInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:id="@+id/buttonCommentLike"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/ic_food_rating"
                                />

                            <TextView
                                android:id="@+id/textViewCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="@={viewModel.calories}"
                                android:textColor="@color/black"
                                android:textSize="26dp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="kcal"
                                android:textColor="@color/black"
                                android:textSize="24dp"
                                android:gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_dialog_bg"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="35dp"
                            android:paddingTop="20dp"
                            android:paddingHorizontal="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linearLayoutCaloriesInfo"
                            android:orientation="horizontal"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:text="Food Rating"

                                    android:textColor="@color/whiteTextColor"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:text="It Identifies whether the food you \nwish to consume is healthy and\nsafe to eat!"
                                    android:textColor="@color/whiteTextColor"
                                    android:textSize="16dp"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="85dp"
                                app:srcCompat="@drawable/ic_food_indicators"
                                />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:layout_constraintTop_toBottomOf="@id/cardViewCaloriesInfo"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_marginVertical="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:text="Nutritional Facts"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                            android:textStyle="bold" />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circularProgressIndicatorCarbs"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/background_progress_bar_outline"
                                android:progress="70"
                                app:indicatorColor="@color/black"
                                app:indicatorSize="100dp"
                                app:trackThickness="5dp"
                                android:indeterminate="false"
                                android:layoutDirection="rtl"
                                android:animateLayoutChanges="true"
                                />

                            <TextView
                                android:id="@+id/textViewCarbsPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.percentageCarbs}"
                                android:textColor="@color/black"
                                android:textSize="28dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicatorCarbs"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorCarbs"
                                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicatorCarbs"
                                app:layout_constraintTop_toTopOf="@+id/circularProgressIndicatorCarbs" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="CARBS"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorCarbs"
                                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicatorCarbs"
                                app:layout_constraintTop_toBottomOf="@id/circularProgressIndicatorCarbs" />

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circularProgressIndicatorProtein"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/background_progress_bar_outline"
                                android:progress="12"
                                app:indicatorColor="@color/black"
                                app:indicatorSize="100dp"
                                app:layout_constraintEnd_toStartOf="@+id/circularProgressIndicatorFats"
                                app:layout_constraintStart_toEndOf="@+id/circularProgressIndicatorCarbs"
                                app:trackThickness="5dp"
                                android:animateLayoutChanges="true"/>

                            <TextView
                                android:id="@+id/textViewProteinPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.percentageProtein}"
                                android:textColor="@color/black"
                                android:textSize="28dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicatorProtein"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorProtein"
                                app:layout_constraintStart_toStartOf="@id/circularProgressIndicatorProtein"
                                app:layout_constraintTop_toTopOf="@id/circularProgressIndicatorProtein" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="PROTEIN"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorProtein"
                                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicatorProtein"
                                app:layout_constraintTop_toBottomOf="@id/circularProgressIndicatorProtein" />

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circularProgressIndicatorFats"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:background="@drawable/background_progress_bar_outline"
                                android:progress="10"
                                app:indicatorColor="@color/black"
                                app:indicatorSize="100dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:trackThickness="5dp"
                                android:animateLayoutChanges="true"/>

                            <TextView
                                android:id="@+id/textViewFatsPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.percentageFats}"
                                android:textColor="@color/black"
                                android:textSize="28dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicatorFats"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorFats"
                                app:layout_constraintStart_toStartOf="@id/circularProgressIndicatorFats"
                                app:layout_constraintTop_toTopOf="@id/circularProgressIndicatorFats" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="FATS"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicatorFats"
                                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicatorFats"
                                app:layout_constraintTop_toBottomOf="@id/circularProgressIndicatorFats" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/textViewTitleCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Calories"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewDataCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.calories}"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/textViewTitleProtein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Protein"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTitleCalories" />

                            <TextView
                                android:id="@+id/textViewDataProtein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.protein}"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDataCalories" />

                            <TextView
                                android:id="@+id/textViewTitleCarbs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Carbs"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginTop="30dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTitleProtein" />

                            <TextView
                                android:id="@+id/textViewDataCarbs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.carbs}"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginTop="30dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDataProtein" />

                            <TextView
                                android:id="@+id/textViewTitleFiber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Fiber"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTitleCarbs" />

                            <TextView
                                android:id="@+id/textViewDataFiber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDataCarbs" />

                            <TextView
                                android:id="@+id/textViewTitleSugars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Sugars"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTitleFiber" />

                            <TextView
                                android:id="@+id/textViewDataSugars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDataFiber" />

                            <TextView
                                android:id="@+id/textViewTitleFats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="Fats"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginTop="30dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewTitleSugars" />

                            <TextView
                                android:id="@+id/textViewDataFats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="@={viewModel.fats}"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginTop="30dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDataSugars" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            android:layout_marginBottom="20dp">
            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/buttonRegisterButton"
                style="@style/loginButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:onClick="@{(v)->presenter.onClick(v)}"
                android:text="Track"
                android:width="350dp"
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"/>
        </RelativeLayout>
    </FrameLayout>
</layout>